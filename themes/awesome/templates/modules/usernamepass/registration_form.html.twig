<form class="form-horizontal" action="{{action}}" method="POST">
	<legend>Enter your information to create an account</legend>

	<div class="form-group{% if 'username' in errors|keys %} error" title="{{ errors['username']|join("\n")}}{% endif %}">
		<label class="col-sm-3 col-md-3 col-lg-2 control-label" for="startupapi-{{slug}}-username">Username</label>
		<div class="col-sm-8 col-md-7 col-lg-5">
			<input class="form-control" id="startupapi-{{slug}}-username" name="username" type="text" size="25" required="true" value="{% if 'username' in data|keys %}{{ data.username }}{% endif %}"/>
		</div>
	</div>

	<div class="form-group{% if 'pass' in errors|keys %} error" title="{{ errors['pass']|join("\n")}}{% endif %}">
		<label class="col-sm-3 col-md-3 col-lg-2 control-label" for="startupapi-{{slug}}-pass">Set a password</label>
		<div class="col-sm-8 col-md-7 col-lg-5">
			<input class="form-control" id="startupapi-{{slug}}-pass" name="pass" type="password" autocomplete="off"/>
		</div>
	</div>

	<div class="form-group{% if 'resetpass' in errors|keys %} error" title="{{ errors['resetpass']|join("\n")}}{% endif %}">
		<label class="col-sm-3 col-md-3 col-lg-2 control-label" for="startupapi-{{slug}}-repeatpass">Repeat new password</label>
		<div class="col-sm-8 col-md-7 col-lg-5">
			<input class="form-control" id="startupapi-{{slug}}-repeatpass" name="repeatpass" type="password" autocomplete="off"/>
		</div>
	</div>

	<div class="form-group{% if 'name' in errors|keys %} error" title="{{ errors['name']|join("\n")}}{% endif %}">
		<label class="col-sm-3 col-md-3 col-lg-2 control-label" for="startupapi-{{slug}}-name">Name</label>
		<div class="col-sm-8 col-md-7 col-lg-5">
			<input class="form-control" id="startupapi-{{slug}}-name" name="name" type="text" value="{% if 'name' in data|keys %}{{ data.name }}{% endif %}"/>
		</div>
	</div>

	<div class="form-group{% if 'email' in errors|keys %} error" title="{{ errors['email']|join("\n")}}{% endif %}">
		<label class="col-sm-3 col-md-3 col-lg-2 control-label" for="startupapi-{{slug}}-email">Email</label>
		<div class="col-sm-8 col-md-7 col-lg-5">
			<input class="form-control" id="startupapi-{{slug}}-email" name="email" type="email" value="{% if 'email' in data|keys %}{{ data.email }}{% endif %}" placeholder="john@example.com"/>
		</div>
	</div>

	{% if PAGE.TOSlinks %}
	<div class="form-group">
		<div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-2 col-sm-8 col-md-7 col-lg-5">
			{{PAGE.TOSlinks|raw}}
		</div>
	</div>
	{% endif %}

	<div class="form-group">
		<div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-2 col-sm-8 col-md-7 col-lg-5">
			<button class="btn btn-primary" type="submit" name="register">Register</button> <a class="btn btn-default" href="{{UserConfig.USERSROOTURL}}/login.php">or login here</a>
		</div>
	</div>
</form>
