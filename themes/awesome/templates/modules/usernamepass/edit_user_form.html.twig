{% import 'error_messages.html.twig' as ERR %}
<div class="page-header">
	<h1>Update your username and password</h1>
</div>

{{ ERR.showModuleErrors(module.id, errors) }}

<form class="form-horizontal" action="{{action}}" method="POST"role="form">
	<div class="form-group{% if 'username' in errors|keys %} has-error" title="{{ errors['username']|join("\n")}}{% endif %}">
		<label class="col-sm-4 col-md-3 control-label" for="startupapi-{{slug}}-edit-username">Username</label>
		<div class="col-sm-7 col-md-6 col-lg-4">
			{% if AUTH.current_user.username %}
				<input class="form-control" readonly type="text" title="Sorry, you can't change your username" value="{{AUTH.current_user.username}}"/>
			{% else %}
				<input class="form-control" id="startupapi-{{slug}}-edit-username" name="username" type="text" required="true" value="{% if 'username' in data|keys %}{{ data.username }}{% else %}{{AUTH.current_user.username}}{% endif %}"/>
			{% endif %}
		</div>
	</div>

	{% if AUTH.current_user.username %}
		<div class="form-group{% if 'currentpass' in errors|keys %} has-error" title="{{ errors['currentpass']|join("\n")}}{% endif %}">
			<label class="col-sm-4 col-md-3 control-label" for="startupapi-{{slug}}-edit-currentpass">Current password</label>
			<div class="col-sm-7 col-md-6 col-lg-4">
				<input class="form-control" id="startupapi-{{slug}}-edit-currentpass" name="currentpass" type="password" autocomplete="off"/>
			</div>
		</div>
	{% endif %}

	<div class="form-group{% if 'pass' in errors|keys %} has-error" title="{{ errors['pass']|join("\n")}}{% endif %}">
		<label class="col-sm-4 col-md-3 control-label" for="startupapi-{{slug}}-edit-pass">
			{% if AUTH.current_user.username %}
			New
			{% else %}
			Set a
			{% endif %}
			password
		</label>
		<div class="col-sm-7 col-md-6 col-lg-4">
			<input class="form-control" id="startupapi-{{slug}}-edit-pass" name="pass" type="password" autocomplete="off"/>
		</div>
	</div>

	<div class="form-group{% if 'repeatpass' in errors|keys %} has-error" title="{{ errors['repeatpass']|join("\n")}}{% endif %}">
		<label class="col-sm-4 col-md-3 control-label" for="startupapi-{{slug}}-edit-repeatpass">Repeat new password</label>
		<div class="col-sm-7 col-md-6 col-lg-4">
			<input class="form-control" id="startupapi-{{slug}}-edit-repeatpass" name="repeatpass" type="password" autocomplete="off"/>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-4 col-md-offset-3 col-sm-7 col-md-6 col-lg-4">
			<button class="btn btn-primary" type="submit" name="save">Save changes</button>
		</div>
	</div>
	<input type="hidden" name="CSRF_NONCE" value="{{ AUTH.CSRF_NONCE }}"/>
</form>