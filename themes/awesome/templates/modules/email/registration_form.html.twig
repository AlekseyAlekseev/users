<form class="form-horizontal" action="{{action}}" method="POST">
		<p>Enter your name and email address to sign up</p>

		<div class="form-group{% if 'name' in errors|keys %} has-error" title="{{ errors['name']|join("\n")}}{% endif %}">
			<label class="col-sm-1 control-label" for="startupapi-{{slug}}-registration-name">Name</label>
			<div class="col-sm-8 col-md-7 col-lg-5">
				<input class="form-control" id="startupapi-{{slug}}-registration-name" name="name" type="text" value="{% if 'name' in data|keys %}{{ data.name }}{% endif %}"/>
			</div>
		</div>

		<div class="form-group{% if 'email' in errors|keys %} has-error" title="{{ errors['email']|join("\n")}} ?>{% endif %}">
			<label class="col-sm-1 control-label" for="startupapi-{{slug}}-registration-email">Email</label>
			<div class="col-sm-8 col-md-7 col-lg-5">
				<input class="form-control" id="startupapi-{{slug}}-registration-email" required name="email" type="email" placeholder="john@example.com"/>
			</div>
		</div>

		{% if PAGE.TOSlinks %}
		<div class="form-group">
			<div class="col-sm-offset-1 col-sm-8 col-md-7 col-lg-5">
				{{PAGE.TOSlinks|raw}}
			</div>
		</div>
		{% endif %}

		<div class="form-group">
			<div class="col-sm-offset-1 col-sm-8 col-md-7 col-lg-5">
				<button class="btn btn-primary" type="submit" name="register">Sign up</button>
				{% if UserConfig.enableRegistration %}
				<a class="btn btn-default" href="{{UserConfig.USERSROOTURL}}/login.php">or re-send login link</a>
				{% endif %}
			</div>
		</div>
</form>