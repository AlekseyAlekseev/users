{% extends 'page_with_sidebar.html.twig' %}
{% import 'error_messages.html.twig' as ERR %}

{% block content %}
	<legend>
		Accounts /
		<a href="{{UserConfig.USERSROOTURL}}/manage_account.php"><b>{{ account_name }}</b></a> /
		<a href="{{UserConfig.USERSROOTURL}}/subscription_details.php">Subscription details</a> /
		Transaction Log
	</legend>
	{% if message %}
		{% for msg in message %}
			<div class="alert">{{ msg }}</div>
		{% endfor %}
	{% endif %}

	{% if log|length == 0 %}
			<div>
			Not transactions found
			</div>
	{% endif %}

	{% if not fatal and log|length >0 %}
		<link rel="stylesheet" type="text/css" href="{{ USERSROOTURL }}/calendarview/stylesheets/calendarview.css" />
		<style>
			.calendarButton {
				margin: 0em;
				padding: 1px 6px;
				letter-spacing: normal;
				word-spacing: normal;
				line-height: normal;
				text-transform: none;
				text-indent: 0px;
				text-shadow: none;
				display: inline-block;
				border: 1px solid black;
				cursor: pointer;
			}
			div.calendar.popup {
				margin-left: 0px;
				margin-top: 30px;
			}
		</style>

		<script type="text/javascript" src="{{ USERSROOTURL }}/calendarview/javascripts/prototype.js"></script>
		<script type="text/javascript" src="{{ USERSROOTURL }}/calendarview/javascripts/calendarview.js"></script>
		<script type="text/javascript">
			window.onload = function() {
				Calendar.setup({
					dateField      : 'from',
					triggerElement : 'from'
				});
				Calendar.setup({
					dateField      : 'to',
					triggerElement : 'to'
				});
			}
		</script>
		<div>
			<form action="" method="GET" class="form-inline">
				<input type="hidden" name="account_id" value="{{ account_id }}" />
				<input class="input-small" placeholder="Start date" type="text" name="from" id="from" value="{{ from }}"/><!--<span class="calendarButton" id="fromButton" >..</span>-->
				<input class="input-small" placeholder="End date" type="text" name="to" id="to" value="{{ to }}" /><!--<span class="calendarButton" id="toButton" >..</span>-->
				<button class="btn" type="submit"><i class="icon-calendar"></i> Filter</button>
				<a href="?account_id={{ account_id }}" class="btn{%if from %} btn-primary{%endif%}">Reset</a>
			</form>

			<ul class="pager">
				<li class="previous{%if page == 0 %} disabled{%endif%}">
					{%if page > 0 %}
						<a href="?page={{ page - 1 }}{{ from_to }}">&larr; Previous</a>
					{%else%}
						<a href="javascript:false">&larr; Previous</a>
					{%endif%}
				</li>
				<li>Page {{ page + 1 }}</li>
				<li class="next{%if log|length < perpage %} disabled{%endif%}">
					{%if log|length == perpage %}
						<a href="?page={{ page + 1 }}{{ from_to }}">Next &rarr;</a>
					{%else%}
						<a href="javascript:false">Next &rarr;</a>
					{%endif%}
				</li>
			</ul>

			<table class="table table-striped table-condensed">
				<thead>
					<tr><th>Date and time</th><th>Transaction Amount</th><th>Transaction Details</th><th>Via</th></tr>
				</thead>

				{% for tr in log %}
				<tr valign="top">
					<td>{{ tr.date_time }}</td><td align="center">{%if tr.amount < 0 %}-{%endif%}${{ "%.2f"|format(tr.amount|abs)}}</td>
					<td>{{ tr.message }}</td><td>{{ tr.engine_slug }}</td></tr>
				{%endfor%}
			</table>

			<ul class="pager">
				<li class="previous{%if page == 0 %} disabled{%endif%}">
					{%if page > 0 %}
						<a href="?page={{ page - 1 }}{{ from_to }}">&larr; Previous</a>
					{%else%}
						<a href="javascript:false">&larr; Previous</a>
					{%endif%}
				</li>
				<li>Page {{ page + 1 }}</li>
				<li class="next{%if log|length < perpage %} disabled{%endif%}">
					{%if log|length == perpage %}
						<a href="?page={{ page + 1 }}{{ from_to }}">Next &rarr;</a>
					{%else%}
						<a href="javascript:false">Next &rarr;</a>
					{%endif%}
				</li>
			</ul>
		</div>
	{% endif %}
{% endblock %}